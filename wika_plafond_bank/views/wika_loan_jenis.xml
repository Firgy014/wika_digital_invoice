<odoo>

    <data>

        <record id="wika_loan_jenis_view_tree" model="ir.ui.view">
            <field name="name">wika.loan.jenis.view.tree</field>
            <field name="model">wika.loan.jenis</field>
            <field name="arch" type="xml">
                <tree string="Loan Jenis">
                    <field name="kode"/>
                    <field name="nama" />
                    <field name="tipe"/>
                    <field name="kelompok"/>
                    <field name="sap_code"/>
                    <field name="lock_date"/>
                </tree>
            </field>
        </record>

        <record id="wika_loan_jenis_view_form" model="ir.ui.view">
            <field name="name">wika.loan.jenis.view.form</field>
            <field name="model">wika.loan.jenis</field>
            <field name="arch" type="xml">
                <form string="Loan Jenis">
                    <sheet>
                        <group>
                            <field name="kode"/>
                            <field name="nama" />
                            <field name="tipe"/>
                            <field name="kelompok"/>
                            <field name="sap_code"/>
                            <field name="lock_date"/>
                        </group>
                        <group string="Default Account for LOAN" name="account_loan">
                            <field name="account_id"/>
                        </group>
                        <notebook>
                            <page string='Tipe'>
                                <field name="tipe_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="wika_loan_jenis_action" model="ir.actions.act_window">
            <field name="name">Loan Jenis</field>
            <field name="res_model">wika.loan.jenis</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
    
</odoo>