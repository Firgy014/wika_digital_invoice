<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="wika_loan_stage_tree_view_tree" model="ir.ui.view">
            <field name="name">wika.loan.stage.view.tree</field>
            <field name="model">wika.loan.stage</field>
            <field name="arch" type="xml">
                <tree string="List Stage Loan">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="tipe"/>
                </tree>
            </field>
        </record>
        
        <record id="wika_loan_stage_view_form" model="ir.ui.view">
            <field name="name">wika.loan.stage.view.form</field>
            <field name="model">wika.loan.stage</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tipe"/>
                            <field name="sequence"/>
                            <field name="request"/>
                        </group>
                        <notebook>
                            <page string='Groups'>
                                <field name="groups_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="groups_id"/>
                                        <field name="sequence"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wika_loan_stage_action" model="ir.actions.act_window">
            <field name="name">Stage</field>
            <field name="res_model">wika.loan.stage</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>