<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_dashboard_document" model="ir.actions.act_window">
            <field name="name">Dashboard Documents</field>
            <field name="res_model">wika.dashboard.document</field>
            <field name="view_mode">tree,form,kanban</field>
            <!-- <field name="domain">[('state','in',('po', 'uploaded', 'approved'))]</field> -->
            <field name="domain">[('folder_id', '!=', False)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('wika_dashboard.view_dashboard_document_kanban')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('wika_dashboard.view_dashboard_document_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('wika_dashboard.view_dashboard_document_form')}),
            ]"/>
            <!-- <field name="context">{'default_state':'po'}</field> -->
        </record>

