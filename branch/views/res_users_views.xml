<odoo>
    <data>

        <record id="branch_res_partner_form_view" model="ir.ui.view">
            <field name="name">res.user.form.extended</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <group name="preferences" position="before">
                    <group string='Allowed Branches'>
                        <field name="level"/>
                        <field name="branch_id"  attrs="{'invisible': [('level','=','Proyek')]}"/>
                        <field name="department_id" attrs="{'invisible': [('level','!=','Divisi Fungsi')]}"/>
                        <field name="project_id" invisible="1"/>
                        <field name="project_ids"  attrs="{'invisible': [('level','!=','Proyek')]}" widget="many2many_tags"/>
                         <field name="branch_ids"  widget="many2many_tags"  attrs="{'invisible': [('level','=','Proyek')]}"/>
                    </group>


                </group>
            </field>
        </record>
    </data>
</odoo>