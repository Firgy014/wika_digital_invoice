<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wika_approval_setting_tree_view" model="ir.ui.view">
            <field name="name">wika.approval.setting.tree</field>
            <field name="model">wika.approval.setting</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="level"/>
                    <field name="transaction_type"/>

                    <!--<field name="branch_id"/>
                    <field name="project_id"/>-->
                    <field name="model_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="wika_approval_setting_form_view" model="ir.ui.view">
            <field name="name">wika.approval.setting.form</field>
            <field name="model">wika.approval.setting</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                          <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>

                    </header>
                    <group>
                        <field name="level" attrs="{'readonly': [('state', '=', 'confirm')]}"/>
                        <field name="transaction_type"/>
                        <field name="branch_id"/>
                        <field name="department_id"/>
                        <field name="project_id"/>
                        <field name="model_id"/>
                        <field name="total_approve"/>
                    </group>
                    <notebook>
                        <page string="Setting Lines">
                            <field name="setting_line_ids" widget="one2many_list" options="{'editable': true}">
                                <tree editable="bottom">
                                    <field name="state" invisible="1"/>
                                    <field name="sequence" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                    <field name="user_id" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                    <field name="branch_id" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                    <field name="department_id" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                    <field name="project_id" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                    <field name="groups_id" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

    </data>
</odoo>