<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="matrix_approval_form_view" model="ir.ui.view">
            <field name="name">wika.matrix.approval.form</field>
            <field name="model">wika.matrix.approval</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                    </group>
                    <notebook>
                        <page string="Approval Lines">
                            <field name="line_ids" widget="one2many_list" options="{'editable': true}">
                                <tree editable="bottom">
                                    <field name="group_id"/>
                                    <field name="sequence"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="matrix_approval_tree_view" model="ir.ui.view">
            <field name="name">wika.matrix.approval.tree</field>
            <field name="model">wika.matrix.approval</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_id"/>
                </tree>
            </field>
        </record>

        <record id="matrix_approval_line_form_view" model="ir.ui.view">
            <field name="name">wika.matrix.approval.line.form</field>
            <field name="model">wika.matrix.approval.line</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="group_id"/>
                        <field name="sequence"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="matrix_approval_line_tree_view" model="ir.ui.view">
            <field name="name">wika.matrix.approval.line.tree</field>
            <field name="model">wika.matrix.approval.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="group_id"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="wika_approval_setting_tree_view" model="ir.ui.view">
            <field name="name">wika.approval.setting.tree</field>
            <field name="model">wika.approval.setting</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="branch_id"/>
                    <field name="project_id"/>
                    <field name="model_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="wika_approval_setting_form_view" model="ir.ui.view">
            <field name="name">wika.approval.setting.form</field>
            <field name="model">wika.approval.setting</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="branch_id"/>
                        <field name="project_id"/>
                        <field name="model_id"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Setting Lines">
                            <field name="setting_line_ids" widget="one2many_list" options="{'editable': true}">
                                <!-- <tree editable="bottom"> -->
                                <tree>
                                    <!-- <field name="sequence"/>
                                    <field name="user_id"/>
                                    <field name="groups_id"/> -->
                                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                                    <field name="sequence" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                    <field name="user_id" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                    <field name="groups_id" attrs="{'readonly': [('state', '=', 'confirm')]}" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- <record id="wika_approval_setting_line_form_view" model="ir.ui.view">
