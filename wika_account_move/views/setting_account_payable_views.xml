<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_setting_account_payable_tree" model="ir.ui.view">
        <field name="name">wika.setting.account.payable.tree</field>
        <field name="model">wika.setting.account.payable</field>
        <field name="arch" type="xml">
            <tree>
                <field name="valuation_class"/>
                <field name="assignment"/>
                <field name="account_pihak_ketiga_id"/>
                <field name="account_berelasi_id"/>
            </tree>
        </field>
    </record>

    <record id="view_setting_account_payable_form" model="ir.ui.view">
        <field name="name">wika.setting.account.payable.tree</field>
        <field name="model">wika.setting.account.payable</field>
        <field name="arch" type="xml">
            <form>
                <group string="Valuation Setting">
                    <field name="valuation_class"/>
                </group>
                <group string="Account Assigment">
                    <field name="assignment"/>
                </group>
                <group string="Chart of Accounts">
                    <field name="account_pihak_ketiga_id"/>
                    <field name="account_berelasi_id"/>
                </group>
            </form>
        </field>
    </record>

</odoo>