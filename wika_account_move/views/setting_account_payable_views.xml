<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_setting_account_payable_tree" model="ir.ui.view">
        <field name="name">wika.setting.account.payable.tree</field>
        <field name="model">wika.setting.account.payable</field>
        <field name="arch" type="xml">
            <tree>
                <field name="valuation_class"/>
                <field name="assignment"/>
                <field name="bill_coa_type"/>
                <field name="account_id"/>
            </tree>
        </field>
    </record>

    <record id="view_setting_account_payable_form" model="ir.ui.view">
        <field name="name">wika.setting.account.payable.form</field>
        <field name="model">wika.setting.account.payable</field>
        <field name="arch" type="xml">
            <sheet>
                <form>
                    <group string="Payable Accounts Configuration">
                        <field name="valuation_class"/>
                        <field name="assignment"/>
                        <field name="bill_coa_type" string="COA Type"/>
                        <field name="account_id"/>
                        <field name="pph_ids" widget="many2many_tags"/>
                        <field name="pph_ids" widget="many2many_tags"/>

                    </group>
                </form>
            </sheet>
        </field>
    </record>

</odoo>