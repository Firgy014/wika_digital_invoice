<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="view_doc_ap_non_po_form" model="ir.ui.view">
            <field name="name">doc.ap.non.po.form</field>
            <field name="model">doc.ap.non.po</field>
            <field name="priority" eval="1" />
            <field name="arch" type="xml">
                <form string="Form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="doc_number" />
                            </h1>
                        </div>
                        <group>
                            <group id="header_left_group">
                                <field name="divisi_id"/>
                                <field name="project_id"
                                    options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="posting_date"/>
                                <field name="partner_id"/>
                                <field name="state"/>
                            </group>
                            <group id="header_right_group">

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree -->
        <record id="view_doc_ap_non_po_tree" model="ir.ui.view">
            <field name="name">doc.ap.non.po.tree</field>
            <field name="model">doc.ap.non.po</field>
            <field name="priority" eval="1" />
            <field name="arch" type="xml">
                <tree string="DOC AP Non PO">
                    <field name="doc_number" />
                    <field name="divisi_id" />
                    <field name="project_id" />
                    <field name="posting_date" />
                    <field name="partner_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>

    </data>

</odoo>