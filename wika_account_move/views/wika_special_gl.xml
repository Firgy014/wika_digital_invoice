<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- tree view -->
        <record id="wika_special_gl_view_tree" model="ir.ui.view">
            <field name="name">wika.special.gl.view.tree</field>
            <field name="model">wika.special.gl</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Special GL">
                    <field name="code" readonly="1"/>
                    <field name="name" readonly="1"/>
                </tree>
            </field>
        </record>
        
        <!-- action -->
        <record id="wika_special_gl_action" model="ir.actions.act_window">
            <field name="name">Special GL</field>
            <field name="res_model">wika.special.gl</field>
            <field name="view_mode">tree</field>
        </record>
    </data>

</odoo>