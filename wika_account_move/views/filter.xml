<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- filter inherit -->
        <record id="view_wika_account_move_filter_inherit" model="ir.ui.view">
            <field name="name">model.name.view.filter.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <!-- search -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="branch_id" string="Divisi"/>
                    <field name="department_id" string="Department"/>
                    <field name="project_id" string="Project"/>
                </xpath>

                <!-- filters -->
                <xpath expr="//filter[@name='cancel']" position="after">
                    <filter name="branch_id" string="Divisi" domain="[('invoice_user_id', '=', uid)]"/>
                    <filter name="department_id" string="Department" domain="[('invoice_user_id', '=', uid)]"/>
                    <filter name="project_id" string="Project" domain="[('invoice_user_id', '=', uid)]"/>
                </xpath>

                <!-- group by -->
                <xpath expr="//filter[@name='salesperson']" position="after">
                    <filter string="Divisi" name="branch_id" domain="[]" context="{'group_by': 'branch_id'}"/>
                    <filter string="Department" name="department_id" domain="[]" context="{'group_by': 'department_id'}"/>
                    <filter string="Project" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
