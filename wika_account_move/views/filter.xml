<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- filter inherit -->
        <record id="view_wika_account_move_filter" model="ir.ui.view">
            <field name="name">model.name.view.filter</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <search string="Search Invoice">
                    <field name="name" string="Invoice" filter_domain="[                                 '|', '|' , '|', '|',                                 ('name', 'ilike', self), ('invoice_origin', 'ilike', self),                                 ('ref', 'ilike', self), ('payment_reference', 'ilike', self),                                 ('partner_id', 'child_of', self)]"/>
                    <field name="partner_id" />
                    <field name="po_id" />
                    <field name="bap_id" />
                    <field name="branch_id" />
                    <field name="project_id" />
                    <field name="line_ids" string="Invoice Item"/>
                    <filter domain="[('invoice_user_id', '=', uid)]" name="myinvoices" help="My Invoices"/>
                    <separator/>
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="upload" string="Uploaded" domain="[('state', '=', 'uploaded')]"/>
                    <filter name="approved" string="Approved" domain="[('state', '=', 'approved')]"/>

                    <group expand="0" string="Group By">
                        <filter string="Divisi" name="branch_id" domain="[]" context="{'group_by': 'branch_id'}"/>
                        <filter string="Department" name="department_id" domain="[]" context="{'group_by': 'department_id'}"/>
                        <filter string="Project" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>

                        <separator/>
                         <filter string="Nomor PO" name="po_id" domain="[]" context="{'group_by': 'po_id'}"/>
                         <filter string="BAP" name="bap_id" domain="[]" context="{'group_by': 'bap_id'}"/>
                         <filter string="Vendor" name="partner_id" domain="[]" context="{'group_by': 'partner_id'}"/>

                          <separator/>
                        <filter string="Document Date" name="invoicedate" context="{'group_by': 'invoice_date'}"/>
                        <filter string="Due Date" name="duedate" context="{'group_by': 'invoice_date_due'}"/>

                    </group>
               </search>
            </field>
        </record>

    </data>
    

</odoo>
