<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_wika_account_move_line_tree" model="ir.ui.view">
            <field name="name">wika.account.move.line.view.tree</field>
            <field name="model">account.move.line</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                    <tree string="Invoice Item" editable="bottom" create="0" delete="0">
                        <field name="move_id"/>
                        <field name="branch_id"/>
                        <field name="project_id"/>
                        <field name="partner_id"/>
                        <field name="picking_id" domain="[('po_id', '=', purchase_id)]"/>
                        <field name="stock_move_id" domain="[('picking_id', '=', picking_id)]"/>
                        <field name="product_id"/>
                        <field name="quantity" sum="Total Qty"/>
                         <field name="product_uom_category_id" invisible="1"/>
                        <field name="product_uom_id"/>
                        <field name="price_unit" />
                        <field name="price_subtotal" sum="Total Price Subtotal"/>
                        <field name="amount_sap" sum="Total Amount SAP"/>
                         <field name="cut_off" invisible="1" />
                    </tree>
            </field>
        </record>

    </data>

</odoo>
