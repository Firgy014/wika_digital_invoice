<odoo>
    <data>
        <record id="approval_wizard_form" model="ir.ui.view">
            <field name="name">approval.wizard.form</field>
            <field name="model">approval.wizard.account.move</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="keterangan" readonly="1" force_save="1"/>
                    </group>
                    <footer>
                        <button name="ok" type="object" string="Simpan" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_approval_wizard" model="ir.actions.act_window">
            <field name="name">Approval Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">approval.wizard.account.move</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>