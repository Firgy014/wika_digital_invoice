<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- filter -->
        <record id="wika_payment_request_view_search" model="ir.ui.view">
            <field name="name">wika.payment.request.search</field>
            <field name="model">wika.payment.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id"/>
                    <field name="date"/>
                    <field name="name"/>
                    
                    <filter name="filter_divisi" string="Divisi" domain="[('branch_id', '=', uid)]"/>
                    <filter name="filter_department" string="Department" domain="[('department_id', '=', uid)]"/>
                    <!-- <filter string="Project" name="project_id" domain="[('branch_id', '=', uid)]"/>
                    <filter string="BAP Date" name="bap_date"/>
                    <filter string="Vendor" name="partner_id"/>
                    <filter string="Nomor PO" name="po_id"/> -->

                    <group expand="0" string="Group By">
                        <filter name="name" string="Divisi" context="{'group_by': 'branch_id'}"/>
                        <filter name="name" string="Department" context="{'group_by': 'department_id'}"/>
                        <filter name="name" string="Project" context="{'group_by': 'project_id'}"/>
                        <filter name="name" string="Date" context="{'group_by': 'date'}"/>
                        <filter name="name" string="vendor" context="{'group_by': 'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- tree -->
        <record id="wika_payment_request_view_tree" model="ir.ui.view">
            <field name="name">wika.payment.request.view.tree</field>
            <field name="model">wika.payment.request</field>
            <field name="arch" type="xml">
                <tree string="Payement Request">
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="payment_block"/>
                </tree>
            </field>
        </record>

        <!-- form -->
        <record id="wika_payment_request_view_form" model="ir.ui.view">
            <field name="name">wika.payment.request.view.form</field>
            <field name="model">wika.payment.request</field>
            <field name="arch" type="xml">
                <form string="Payment Request">
                    <header>
                        <button name="action_submit" type="object" string="SUBMIT" states="draft" class="btn-primary"/>
                        <!-- <button name="action_request" type="object" string="REQUEST" states="upload" class="btn-primary"/> -->
                        <button name="action_approve" type="object" string="APPROVE" states="request" class="btn-success"/>
                        <button name="action_cancel" type="object" string="CANCEL" states="request"/>
                        <button name="%(wika_payment_request.action_reject_pr_wizard)d" type="action" string="REJECT" states="request" class="btn-danger"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,request,approve"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="date" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="assignment" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="reference" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="payment_block" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="payment_method" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="total" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="step_approve" invisible="1" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                            </group>
                            <group>
                                <field name="check_biro" invisible="1"/>
                                <field name="level" invisible="1"/>
                                <field name="branch_id" domain="[('biro', '=', False)]"
                                    attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                                <field name="department_id" domain="[('biro', '=', True), ('parent_id', '=', branch_id)]" 
                                    attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])], 'invisible': [('check_biro', '=', False)]}"/>
                                <field name="project_id" 
                                    attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="List Invoice">
                                <group>   
                                    <field name="invoice_ids" mode="tree" nolabel="1"  colspan="2" 
                                        domain="[('payment_id', '=', False), ('move_type', '=', 'in_invoice'), ('pr_id', '=', False)]" 
                                        attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}"></field>
                                </group>
                            </page>
                            <!-- <page string="List Document">
                                <field name="document_ids" attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}">
                                    <tree string="List Document">
                                        <field name="document_id"/>
                                        <field name="document" widget="binary_button" filename="filename"/>
                                        <field name="filename" invisible="1"/>
                                        <field name="state"/>
                                    </tree>
                                    <form string='List Document'>
                                        <group>
                                            <field name="document" widget="pdf_viewer" filename="filename"/>
                                            <field name="filename" invisible="1"/>
                                            <field name="state" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page> -->
                            <page string="List Approval">
                                <group>
                                    <field name="history_approval_ids" mode="tree" nolabel="1"  colspan="2" 
                                        attrs="{'readonly': [('state', 'in', [ 'request', 'approve'])]}" readonly="1">
                                        <tree string="List Approval">
                                            <field name="user_id"/>
                                            <field name="groups_id"/>
                                            <field name="date"/>
                                            <field name="note"/>
                                        </tree>
                                        <form string='List Approval'>
                                            <group>
                                                <field name="user_id"/>
                                                <field name="groups_id"/>
                                                <field name="date"/>
                                                <field name="note"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- action -->
        <record id="wika_payment_request.action_window" model="ir.actions.act_window">
            <field name="name">Payment Request</field>
            <field name="res_model">wika.payment.request</field>
            <field name="view_mode">tree,form</field>
        </record>
    
    </data>
    

</odoo>
