<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_inherit_partial_payment" model="ir.ui.view">
            <field name="name">wika.account.move.partial.inherit.view.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="wika_account_move.view_wika_account_move"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='approval_page']" position="after">
                    <page string="Partial Payment Request">
                        <field name="partial_request_ids" />
                          <group>
                            <field name="total_partial_pr"/>
                            <field name="amount_sisa_pr"/>
                            <field name="pr_id" invisible="1"/>
                            <field name="is_partial_pr" invisible="1"/>

                        </group>
                    </page>

                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
