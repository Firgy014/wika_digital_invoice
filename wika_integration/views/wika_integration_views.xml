<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="wika_integration.list">
            <field name="name">wika_integration list</field>
            <field name="model">wika.integration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="app" required="1"/>
                    <field name="url"/>
                    <field name="app_secret"/>
                    <field name="api_user" invisible="1"/>
                    <field name="api_pword" invisible="1"/>
                    <field name="payload"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="wika_integration.form">
            <field name="name">wika_integration form</field>
            <field name="model">wika.integration</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="app" required="1"/>
                            <field name="url"/>
                             <field name="app_secret"/>
                             <field name="payload"/>
                             <field name="api_user" groups="base.group_no_one"/>
                             <field name="api_pword" groups="base.group_no_one"/>
                        </group>
                        <field name="request_ids" readonly="1">
                            <tree>
                                <field name="request_date"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                         <field name="request"/>
                                         <field name="request_date"/>
                                         <field name="response"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="wika_integration_action_window">
            <field name="name">Wika Integration</field>
            <field name="res_model">wika.integration</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="limit">80</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="App Setting" id="wika_app_setting_menu"
                  parent="base.menu_administration"
                  sequence="2" groups="base.group_system"/>

        <menuitem name="WiKA Integration" id="wika_integration_menu"
                  action="wika_integration_action_window"
                  parent="wika_integration.wika_app_setting_menu"
                  sequence="1"/>


    </data>
</odoo>