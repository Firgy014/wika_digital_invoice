<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="template_sap_integration_form_view" model="ir.ui.view">
        <field name="name">wika.sap.integration.excel.wizard</field>
        <field name="model">wika.sap.integration</field>
        <field name="arch" type="xml">
            <form string="Import/Export Wizard">
                <separator string="Import/Export File."/>
                <group>
                    <field name="file_opt" invisible="1"/>
                    <field name="type" />
                    <field name="form" />
                    <field name="pelunasan" invisible="1"/>
                    <field name="file_template" filename="datas_fname" />
                </group>
                <group>
                    <div>
                        <field  name="files" class="oe_inline" filename="datas_fname" attrs="{'invisible':[('type','=','generate')]}"/>
                        <field name="datas_fname" class="oe_inline" invisible="1"/>
                    </div>
                </group>
                <footer>
                    <button string="Import" name="journal_item" type="object" class="oe_highlight"  attrs="{'invisible': ['|','|',('type','=','generate'),('form','!=','ncl'),('pelunasan','=',True)]}"/>
                    <button string="Import Payroll" name="import_payroll" type="object" class="oe_highlight"  attrs="{'invisible': ['|','|',('type','=','generate'),('form','!=','payroll'),('pelunasan','=',True)]}"/>
                    <button string="Import Pelunasan" name="import_pelunasan" type="object" class="oe_highlight"  attrs="{'invisible': [('pelunasan','!=',True)]}"/>
                    <button string="Generate" name="generate_data" type="object" class="oe_highlight" attrs="{'invisible': ['|',('type','=','upload'),('form','!=','ncl')]}"/>
                    <button string="Generate" name="generate_data_vendor_bills" type="object" class="oe_highlight" attrs="{'invisible': ['|',('type','=','upload'),('form','!=','vendor_bills')]}"/>
                    <button string="Generate" name="generate_data_partial_payment" type="object" class="oe_highlight" attrs="{'invisible': ['|',('type','=','upload'),('form','!=','partial_payment')]}"/>
                    <button string="Generate" name="generate_data_vendor_bills_scf" type="object" class="oe_highlight" attrs="{'invisible': ['|',('type','=','upload'),('form','!=','vendor_bills_scf')]}"/>
                    <button string="Generate" name="generate_data_vendor_bills_dp" type="object" class="oe_highlight" attrs="{'invisible': ['|',('type','=','upload'),('form','!=','vendor_bills_dp')]}"/>
                    <button string="Generate" name="generate_data_vendor_bills_retensi" type="object" class="oe_highlight" attrs="{'invisible': ['|',('type','=','upload'),('form','!=','vendor_bills_retensi')]}"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_wika_sap_integration">
        <field name="name">Import/Export SAP</field>
        <field name="res_model">wika.sap.integration</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_form': 'vendor_bills'}</field>
    </record>

    <menuitem
        action="action_wika_sap_integration"
        id="sub_menu_account_move_wika_sap_integration"
        name="Import/Export SAP"
        parent="wika_account_move.main_menu_account_move_config"
        sequence="1"/>

</odoo>
