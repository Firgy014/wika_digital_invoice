<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_inherit_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.api.gl</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                 <div class="app_settings_block" data-string="API SAP" id="gr" string="API SAP">
                        <h2>Get API SAP</h2>
                        <div class="row mt16 o_settings_container" id="end_contract_setting">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                   <button type="object" name="get_gr" string="Get GR/SES" icon="fa-arrow-right" class="btn-link"/>

                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                   <button type="object" name="get_po" string="Get PO" icon="fa-arrow-right" class="btn-link"/>

                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

        </field>
    </record>
</odoo>
