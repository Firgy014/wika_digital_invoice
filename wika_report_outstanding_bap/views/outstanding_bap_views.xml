<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- tree view -->
        <record id="outstanding_bap_new_view_tree" model="ir.ui.view">
            <field name="name">outstanding.bap.view.tree</field>
            <field name="model">outstanding.bap</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="branch_id"/>
                    <field name="purchase_id"/>
                    <field name="sequence_po"/>
                    <field name="product_po_id"/>
                    <field name="qty_po"/>
                    <field name="sub_total_po"/>
                    <field name="picking_id"/>  
                    <field name="sequence_gr"/>
                    <field name="product_gr_id"/>
                    <field name="qty_gr"/>
                    <field name="sub_total_gr"/>
                    <field name="date_bap"/>
                    <field name="bap_id"/>
                    <field name="product_bap_id"/>
                    <field name="unit_price_bap" invisible="1"/>
                    <field name="qty_bap"/>
                    <field name="sub_total_bap"/>
                    <field name="price_subtotal_invoice"/>
                    <field name="potongan_uang_muka_dp"/>
                    <field name="potongan_retensi"/>
                    <field name="potongan_uang_muka_qty_dp"/>
                    <field name="potongan_retensi_qty"/>
                </tree>
            </field>
        </record>

        <!-- action -->
        <record id="outstanding_bap_new_action" model="ir.actions.act_window">
            <field name="name">Outstanding BAP</field>
            <field name="res_model">outstanding.bap</field>
            <field name="view_mode">tree,form</field>
        </record>

        
    </data>
    

</odoo>