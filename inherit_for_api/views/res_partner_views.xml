<odoo>
    <data>


        <record id="inherit_partner_in_tree" model="ir.ui.view">
            <field name="name">Kode Nasabah Baru</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//h2/field[@name='display_name']" position='after'>
                    <field name="kode_nasabah_baru" string="Kode Nasabah Baru"/>
                    <field name="sap_code" string="Kode SAP"/>

                </xpath>
            </field>
        </record>

        <record id="inherit_partner_in_form" model="ir.ui.view">
            <field name="name">Kode Nasabah Baru</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='vat']" position='after'>
                    <field name="kode_nasabah_baru" string="Kode Nasabah Baru"/>
                    <field name="sap_code" string="Kode SAP"/>

                </xpath>
            </field>
        </record>

    </data>
</odoo>