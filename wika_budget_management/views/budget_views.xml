<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="budget_tree_view_3_1" model="ir.ui.view">
            <field name="name">Budget Tree View</field>
            <field name="model">wika.mcs.budget.coa</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Rencana Per Bulan" create="1" >
                    <field name="tahun"/>
                    <field name="kode_coa"/>
                    <field name="department"/>
                    <field name="biro"/>
                    <field name="total_anggaran" sum="Total anggaran"/>
                    <field name="total_anggaran_sap" sum="Nilai anggaran SAP"/>
                     <field name="from_sap" />
                </tree>
            </field>
        </record>

        <record id="budget_search_view_3_1" model="ir.ui.view">
            <field name="name">Budget Search View</field>
            <field name="model">wika.mcs.budget.coa</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tahun"/>
                    <field name="kode_coa"/>
                    <field name="department"/>
                    <field name="total_anggaran"/>
                    <field name="state"/>
                    <group expand="0" string="Group By...">
                        <filter name="department" string="Divisi"
                            domain="[]" context="{'group_by':'department'}" />
                        <filter name="kode_coa" string="Kode COA"
                            domain="[]" context="{'group_by':'kode_coa'}" />
                        <filter name="tahun" string="Tahun"
                            domain="[]" context="{'group_by':'tahun'}" />
                        <filter name="biro" string="Department"
                            domain="[]" context="{'group_by':'biro'}" />
						<filter name="state" string="Status"
                            domain="[]" context="{'group_by':'state'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="budget_form_view_3_1" model="ir.ui.view">
            <field name="name">Budget Form View</field>
            <field name="model">wika.mcs.budget.coa</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Per Bulan">
                    <header>
                        <button name="set_to_draft" type="object" string="Set To Draft" attrs="{'invisible': [('state','!=','Confirm')]}" groups="base.group_no_one"/>
                        <button name="confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('state','!=','Draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="Draft,Confirm,Review"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <!-- <field name="tipe_budget_id" readonly="0" required="1" domain="[('code','!=','bad')]"/> -->
                                <field name="tipe_budget_id" readonly="0" required="1"/>
                                <field name="kode_coa" required="1" attrs="{'readonly': [('state','!=','Draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                <field name="total_anggaran"/>
                                <field name="check_biro" invisible="1"/>
                                <field name="sequence" invisible="1"/>
                                <field name="department" required="1" attrs="{'readonly': [('state','!=','Draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                <field name="biro" domain="[('parent_id', '=', department)]" attrs="{'invisible': [('check_biro', '=', False)], 'required': [('check_biro', '=', True)], 'readonly': [('state','!=','Draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                <field name="aktif"/>
                                <field name="bulan_review" attrs="{'invisible': [('state', '!=', 'Review')], 'readonly': [('state','!=','Draft')]}"/>
                                <field name="tipe_budget" invisible="1"/>
                                <field name="asset_category_id" attrs="{'invisible': [('tipe_budget', '=', 'opex')], 'readonly': [('state','!=','Draft')]}" options="{'no_create': True, 'no_open': True}"/>
                                <field name="sisa" invisible="1"/>
                                <field name="from_sap" readonly="1"/>
                            </group>

                            <group>
                                <field name="tahun" required="1" widget="selection" attrs="{'readonly': [('state','!=','Draft')]}"/>
                                <field name="grup_akun" required="1" attrs="{'readonly': [('state','!=','Draft')]}" options="{'no_create': False, 'no_open': True}"/>
                                <field name="total_anggaran_sap" readonly="1"/>
                                <field name="available_amount_sap" readonly="1"/>
                                <field name="terpakai_sap" readonly="1"/>
                                <field name="terpakai_vb"/>
                            </group>
                        </group>

                        <button name="act_generate" type="object" string="Generate Bulan" class="oe_highlight" attrs="{'invisible': [('state','!=','Draft')]}"/>
                        <notebook>
                            <page name="detail" string="Detail Pekerjaan">
                                <field name="detail_ids" nolable="1" attrs="{'readonly': [('state','!=','Draft')]}">
                                    <tree editable="bottom">
                                        <field name="pekerjaan" required="1" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="vol" required="1"/>
                                        <field name="satuan"/>
                                        <field name="harga_satuan" sum="Total Harga Satuan"/>
                                        <field name="is_beban"/>
                                        <field name="beban" attrs="{'invisible': [('is_beban', '=', False)], 'required': [('is_beban', '=', True)]}"/>
                                        <field name="anggaran" sum="Anggaran" readonly="0"/>
                                        <field name="total_anggaran" invisible="1" sum="Total Anggaran"/>
                                        <field name="coa_id" invisible="1"/>
                                        <field name="tipe_budget" invisible="1"/>
                                        <field name="status_generate" invisible="1"/>
                                        <button name="act_bulan" type="object" string="Per Bulan" attrs="{'invisible': [('status_generate', '=', False)]}" class="oe_highlight"/>
                                        <button name="act_beban" type="object" string="Pembebanan" class="oe_highlight" attrs="{'invisible': ['|',('status_generate', '=', False), '&amp;',('status_generate', '=', True), ('is_beban', '=', False)]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="bulan" string="Total Per Bulan">
                                <field name="detail_ids2" nolable="1">
                                    <tree create="0" delete="0">
                                        <field name="bulan"/>
                                        <field name="total_anggaran"/>
                                        <field name="prognosa"/>
                                        <field name="terpakai_vb"/>
                                        <field name="terpakai_vb_sd"/>
                                        <field name="coa_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="budget_form_view_3_2" model="ir.ui.view">
            <field name="name">Budget Form View</field>
            <field name="model">wika.mcs.budget.coa.detail</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Per Bulan" create="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="pekerjaan" required="1"/>
                                <field name="anggaran"/>
                                <field name="total_anggaran"/>
                            </group>
                            <group>
                                <field name="vol" required="1"/>
                                <field name="satuan"/>
                            </group>
                            <group>
                                <field name="total_bulan" invisible="1"/>
                                <field name="tipe_budget" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="detail" string="Detail">
                                <field name="line_ids" nolable="1">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="sequence" widget="handle"/>
                                        <field name="bulan"/>
                                        <field name="anggaran" sum="Anggaran"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="budget_form_view_3_2_2" model="ir.ui.view">
            <field name="name">Budget Form View</field>
            <field name="model">wika.mcs.budget.coa.detail</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Per Bulan" create="0" edit="0">
                    <sheet>
                        <group col="4">
                            <field name="pekerjaan" required="1" options="{'no_create':True,'no_open':True}" />
                            <field name="vol" required="1"/>
                            <field name="anggaran"/>
                            <field name="satuan"/>
                            <field name="total_anggaran"/>
                        </group>
                        <field name="total_bulan" invisible="1"/>
                        <field name="tipe_budget" invisible="1"/>
                        <notebook>
                            <page name="detail" string="Detail">
                                <field name="line_ids" nolable="1">
                                    <tree editable="bottom" create="0" delete="0" edit="0">
                                        <field name="sequence" widget="handle"/>
                                        <field name="bulan"/>
                                        <field name="anggaran" sum="Anggaran"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="budget_pivot_view_id">
            <field name="name">Budget Pivot</field>
            <field name="model">wika.mcs.budget.coa</field>
            <field name="arch" type="xml">
                <pivot string="Laporan Pivot Budget">
                    <field name="kode_coa" type="row"/>
                    <field name="tahun" type="col"/>
                    <field name="tahun" type="col"/>
                    <field name="total_anggaran" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="grup_tree_view" model="ir.ui.view">
            <field name="name">Grup Tree View</field>
            <field name="model">wika.mcs.budget.parent</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Master Grup" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="parent"/>
                </tree>
            </field>
        </record>

        <record id="grup_search_view" model="ir.ui.view">
            <field name="name">Grup Search View</field>
            <field name="model">wika.mcs.budget.parent</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="parent"/>
                </search>
            </field>
        </record>

        <record id="budget_form_view_3_3" model="ir.ui.view">
            <field name="name">Budget Form View</field>
            <field name="model">wika.mcs.budget.coa.detail</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Per Bulan" create="0">
                    <sheet>
                        <group col="4" attrs="{'invisible': [('tipe_budget', '=', 'bad')]}">
                            <field name="total_rencana"/>
                            <field name="anggaran" string="Anggaran Yang Dibebankan"/>
                            <field name="beban"/>
                            <field name="total_beban"/>
                        </group>
                        <group col="4" attrs="{'invisible': [('tipe_budget', '!=', 'bad')]}">
                            <field name="total_anggaran" string="Anggaran BAD"/>
                            <field name="total_rencana" invisible="1"/>
                            <field name="total_beban" />
                             <field name="anggaran" invisible="1"/>

                             <field name="beban" invisible="1"/>
                            <field name="harga_satuan" invisible="1"/>
                            <field name="vol" invisible="1"/>
                        </group>
                        <field name="tipe_budget" invisible="1"/>
                        <notebook>
                            <page name="beban" string="Beban">
                                <field name="beban_ids" nolable="1" context="{'default_detail_id':id}">
                                    <tree editable="bottom">
                                        <field name="branch_id" required="1" options="{'no_create':True,'no_open':True}" domain="[('eliminasi','=',False)]"/>
                                        <field name="account_id" options="{'no_create':True,'no_open':True}" />

                                        <field name="persen" sum="Total Persen"/>
                                        <field name="anggaran" sum="Total Beban"/>
                                         <field name="tipe_budget" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="budget_form_view_3_3_2" model="ir.ui.view">
            <field name="name">Budget Form View</field>
            <field name="model">wika.mcs.budget.coa.detail</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <form string="Per Bulan">
                    <sheet>
                        <group col="4" attrs="{'invisible': [('tipe_budget', '=', 'bad')]}">
                            <field name="total_rencana"/>
                            <field name="anggaran" string="Anggaran Yang Dibebankan"/>
                            <field name="beban"/>
                            <field name="total_beban"/>

                        </group>
                        <group col="4" attrs="{'invisible': [('tipe_budget', '!=', 'bad')]}">
                            <field name="total_anggaran" string="Anggaran BAD"/>
                            <field name="total_rencana" invisible="1"/>
                            <field name="total_beban" />
                             <field name="anggaran" invisible="1"/>

                             <field name="beban" invisible="1"/>
                            <field name="harga_satuan" invisible="1"/>
                            <field name="vol" invisible="1"/>
                        </group>
                        <field name="tipe_budget" invisible="1"/>
                        <notebook>
                            <page name="beban" string="Beban">
                                <field name="beban_ids" nolable="1" context="{'default_detail_id':id}">
                                    <tree editable="bottom">
                                        <field name="branch_id" required="1" domain="[('eliminasi','=',False)]"/>
                                        <field name="account_id" options="{'no_create':True,'no_open':True}" />

                                        <field name="persen" sum="Total Persen"/>
                                        <field name="anggaran" sum="Total Beban"/>
                                        <field name="tipe_budget" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field> <!-- end arch -->
        </record>

    </data>
</odoo>
