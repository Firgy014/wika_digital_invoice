    <data>
        <record id="budget_action_3_1" model="ir.actions.act_window">
            <field name="name">Budget Per Perkiraan</field>
            <field name="res_model">wika.mcs.budget.coa</field>
            <field name="context">{'default_tipe_budget': 'opex'}</field>
            <field name="domain">[('tipe_budget','!=','bad')]</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('wika_budget_management.budget_tree_view_3_1')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('wika_budget_management.budget_form_view_3_1')}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('wika_budget_management.budget_pivot_view_id')}),
            ]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Master Data Budget Per Perkiraan
                </p>
                <p>
                    Silahkan Buat Rencana Bulan Baru!
                </p>
            </field>
        </record>

        <record id="grup_action" model="ir.actions.act_window">
            <field name="name">Master Grup</field>
