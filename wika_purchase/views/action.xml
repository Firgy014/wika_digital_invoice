<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>



        <!-- Purchase Order Actions -->
        <record id="action_wika_purchase_order" model="ir.actions.act_window">
            <field name="name">Purchase Orders</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','in',('po', 'uploaded', 'approved','cancel','rejected'))]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('wika_purchase.purchase_order_tree_wika')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('wika_purchase.purchase_order_form_wika')}),
            ]"/>
            <field name="context">{'default_state':'po'}</field>

        </record>

    </data>
    
</odoo>