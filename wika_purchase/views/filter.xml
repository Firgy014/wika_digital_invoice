<odoo>
    <data>
        <record id="wika_custom_purchase_order_view_search" model="ir.ui.view">
            <field name="name">wika.purchase.order.select</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
            <field name="arch" type="xml">

                <!-- search fields  -->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="branch_id" string="Divisi"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="branch_id" string="Department"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="project_id" string="Project"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="po_type" string="PO Type"/>
                </xpath>

                <!-- new filters and hide existing -->
                <xpath expr="//filter[@name='my_Orders']" position="replace">
                    <filter string="Uploaded" name="state_uploaded" domain="[('state', '=', 'uploaded')]"/>
                </xpath>
                <xpath expr="//filter[@name='starred']" position="replace">
                    <filter string="Approved" name="state_approved" domain="[('state', '=', 'approved')]"/>
                </xpath>

                <!-- hide existing filters -->
                <xpath expr="//filter[@name='unconfirmed']" position="replace">
                    <filter name="unconfirmed" invisible="1" string="Not Acknowledged" domain="[('mail_reception_confirmed', '=', False), ('state', '=', 'purchase')]"/>
                </xpath>
                <xpath expr="//filter[@name='not_invoiced']" position="replace">
                    <filter name="not_invoiced" invisible="1" string="Waiting Bills" domain="[('invoice_status', '=', 'to invoice')]" help="Purchase orders that include lines not invoiced."/>
                </xpath>
                <xpath expr="//filter[@name='invoiced']" position="replace">
                    <filter name="invoiced" invisible="1" string="Bills Received" domain="[('invoice_status', '=', 'invoiced')]" help="Purchase orders that have been invoiced."/>
                </xpath>
                <xpath expr="//filter[@name='activities_exception']" position="replace">
                    <filter string="Warnings" name="activities_exception" invisible="1" domain="[('activity_exception_decoration', '!=', False)]"/>
                </xpath>

                <!-- hide existing group_bys -->
                <xpath expr="//filter[@name='vendor']" position="after">
                    <filter string="Divisi" name="divisi" domain="[]" context="{'group_by': 'branch_id'}"/>
                </xpath>
                <xpath expr="//filter[@name='divisi']" position="after">
                    <filter string="Department" name="department" domain="[]" context="{'group_by': 'branch_id'}"/>
                </xpath>
                <xpath expr="//filter[@name='department']" position="after">
                    <filter string="Project" name="project" domain="[]" context="{'group_by': 'project_id'}"/>
                </xpath>
                <xpath expr="//filter[@name='project']" position="after">
                    <filter string="PO Type" name="po_type" domain="[]" context="{'group_by': 'po_type'}"/>
                </xpath>
                <xpath expr="//filter[@name='representative']" position="replace">
                    <filter string="Purchase Representative" invisible="1" name="representative" domain="[]" context="{'group_by': 'user_id'}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
