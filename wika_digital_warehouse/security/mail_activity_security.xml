<odoo>
    <data>
        <!-- Define a new security group -->
        <record id="group_custom_mail_activity_user" model="res.groups">
            <field name="name">Mail Activity User</field>
        </record>

        <!-- Grant read access to mail.activity for the new group -->
        <record id="mail_activity_user_rule" model="ir.rule">
            <field name="name">Mail Activity: User Access</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="groups" eval="[(4, ref('wika_digital_warehouse.group_custom_mail_activity_user'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
