    <template id="report_bap">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div t-if="report_type == 'html'">
                    <div>
                        <t t-call="wika_berita_acara_pembayaran.header_session"/>
                    </div>
                    <div style="margin-top:150px">
                        <t t-call="wika_berita_acara_pembayaran.body_session"/>
                    </div>
                </div>
                <div t-else="">
                    <t t-call="wika_berita_acara_pembayaran.header_session"/>
                    <t t-call="web.external_layout">
                        <t t-call="wika_berita_acara_pembayaran.body_session"/>
