<odoo>
    <data>

        <!-- new filter -->
        <record id="wika_berita_acara_pembayaran_view_search" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.search</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <search>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id"/>
                    <field name="bap_date"/>
                    <field name="partner_id"/>
                    <field name="po_id"/>
                    
                    <filter name="filter_divisi" string="Divisi" domain="[('branch_id', '=', uid)]"/>
                    <filter name="filter_department" string="Department" domain="[('department_id', '=', uid)]"/>
                    <!-- <filter string="Project" name="project_id" domain="[('branch_id', '=', uid)]"/>
                    <filter string="BAP Date" name="bap_date"/>
                    <filter string="Vendor" name="partner_id"/>
                    <filter string="Nomor PO" name="po_id"/> -->

                    <group expand="0" string="Group By">
                        <filter name="name" string="Divisi" context="{'group_by': 'branch_id'}"/>
                        <filter name="name" string="Department" context="{'group_by': 'department_id'}"/>
                        <filter name="name" string="Project" context="{'group_by': 'project_id'}"/>
                        <filter name="name" string="Date" context="{'group_by': 'bap_date'}"/>
                        <filter name="name" string="vendor" context="{'group_by': 'partner_id'}"/>
                        <filter name="name" string="Nomor PO" context="{'group_by': 'po_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- kanban -->
        <record id="wika_berita_acara_pembayaran_view_kanban" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.kanban</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <field name="name"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- calendar -->
        <record id="wika_berita_acara_pembayaran_view_calendar" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.calendar</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <calendar string="Service Request"
                    date_start="start_date"
                    date_stop="end_date"
                    event_open_popup="true"
                    mode="month"
                    quick_add="False">
                <field name="name"/>
            </calendar>
            </field>
        </record>

        <!-- pivot -->
        <record id="wika_berita_acara_pembayaran_view_pivot" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.pivot</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <pivot string="Pivot" disable_linking="true">
                    <field name="partner_id"/>
                    <field name="po_id"/>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id" />
                </pivot>
            </field>
        </record>

        <!-- tree view -->
        <record id="wika_berita_acara_pembayaran_view_tree" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.tree</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <tree string="Berita Acara Pembayaran List">
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="po_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="wika_berita_acara_pembayaran_view_form" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.form</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <form string="Berita Acara Pembayaran Form">
                    <header>
                        <button name="action_print_bap" type="object" string="Print BAP" states="draft" class="oe_highlight"/>
                        <button name="action_approve" type="object" string="APPROVE" states="upload" class="btn-success"/>
                        <button name="action_cancel" type="object" string="CANCEL" states="approve"/>
                        <button name="action_submit" type="object" string="SUBMIT" states="draft" class="btn-primary"/>
                        <button name="%(wika_berita_acara_pembayaran.action_reject_wizard)d" type="action" string="REJECT" states="upload" class="btn-danger"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,upload,approve"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="po_id" domain="[('state', '=', 'approved')]"  attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="partner_id" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="bap_type" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="signatory_name" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="position" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="vendor_signatory_name" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="vendor_position" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="address" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="job" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="step_approve" invisible="1"/>
                            </group>
                            <group>
                                <field name="check_biro" invisible="1"/>

                                <field name="branch_id" domain="[('biro', '=', False)]" 
                                    attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="department_id" domain="[('biro', '=', True), ('parent_id', '=', branch_id)]" 
                                    attrs="{'readonly': [('state', 'in', ['upload', 'approve'])], 'invisible': [('check_biro', '=', False)]}"/>
                                <field name="project_id" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="end_date" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                                <field name="bap_date" attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="List BAP">
                                <group>
                                    <field name="bap_ids" mode="tree,kanban" nolabel="1" colspan="2"
                                        attrs="{'readonly': [('state', 'in', ['upload', 'approve'])], 
                                            'invisible': [('bap_type', '!=', 'progress')]}">
                                        <tree string="List BAP" editable="top">
                                            <field name="picking_id"/>
                                            <field name="purchase_line_id"/>
                                            <field name="unit_price_po"/>
                                            <!-- <field name="account_move_line_id"/> -->
                                            <field name="product_id"/>
                                            <field name="qty"/>
                                            <field name="tax_ids" widget="many2many_tags"/>
                                            <field name="currency_id"/>
                                            <field name="unit_price"/>
                                            <field name="sub_total"/>
                                        </tree>
                                    </field>
                                    <field name="price_cut_ids" attrs="{'invisible': [('bap_type', '=', 'progress')]}" 
                                        mode="tree,kanban" nolabel="1" colspan="2">
                                        <tree editable="top">
                                            <field name="po_id" invisible="1"/>
                                            <field name="product_id"/>
                                            <field name="amount"/>
                                        </tree>
                                    </field>
                                    <group>
                                        <field colspan="2" name="notes" nolabel="1" placeholder="Define your terms and conditions ..."/>
                                    </group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="total_amount"/>
                                        <field name="total_tax"/>
                                        <field name="grand_total"/>        
                                        <field name="total_current_value"/>    
                                        <field name="total_qty_gr"/>       
                                        <field name="total_unit_price_po"/>       
                                    </group>
                                </group>
                                <div class="clearfix"/>
                            </page>
                            <page string="Potongan Lain-lain" attrs="{'invisible': [('bap_type', '=', 'uang muka')]}">
                                <field name="price_cut_ids">
                                    <tree editable="top">
                                        <field name="po_id" invisible="1"/>
                                        <field name="product_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="List Document">
                                <group>
                                    <field name="document_ids" mode="tree,kanban" nolabel="1" colspan="2" 
                                        attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}">
                                        <tree string="List Document">
                                            <field name="document_id"/>
                                            <field name="document" widget="binary_button" filename="filename"/>
                                            <field name="filename" invisible="1"/>
                                            <field name="state"/>
                                        </tree>
                                        <form string="List Document">
                                            <group>
                                                <field name="document" widget="pdf_viewer" filename="filename"/>
                                                <field name="filename" invisible="1"/>
                                                <field name="state" invisible="1"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                            <page string="List Approval">
                                <group>
                                    <field name="history_approval_ids" mode="tree,kanban" nolabel="1"  colspan="2" 
                                        attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}" readonly="1">
                                        <tree string="List Approval">
                                            <field name="user_id"/>
                                            <field name="groups_id"/>
                                            <field name="datetime"/>
                                            <field name="note"/>
                                        </tree>
                                        <form string='List Approval'>
                                            <group>
                                                <field name="user_id"/>
                                                <field name="groups_id"/>
                                                <field name="datetime"/>
                                                <field name="note"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- action -->
        <record id="wika_berita_acara_pembayaran.action_window" model="ir.actions.act_window">
            <field name="name">BAP</field>
            <field name="res_model">wika.berita.acara.pembayaran</field>
            <field name="view_mode">tree,form,kanban,calendar,pivot</field>
        </record>

    </data>
</odoo>
