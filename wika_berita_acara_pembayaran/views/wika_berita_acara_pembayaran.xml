<odoo>
    <data>

        <!-- new filter -->
        <record id="wika_berita_acara_pembayaran_view_search" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.search</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <search>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id"/>
                    <field name="bap_date"/>
                    <field name="partner_id"/>
                    <field name="po_id"/>
                     <field name="name"/>
                    <filter name="filter_divisi" string="Divisi" domain="[('branch_id', '=', uid)]"/>
                    <filter name="filter_department" string="Department" domain="[('department_id', '=', uid)]"/>
                    <!-- <filter string="Project" name="project_id" domain="[('branch_id', '=', uid)]"/>
                    <filter string="BAP Date" name="bap_date"/>
                    <filter string="Vendor" name="partner_id"/>
                    <filter string="Nomor PO" name="po_id"/> -->

                    <group expand="0" string="Group By">
                        <filter name="divisi" string="Divisi" context="{'group_by': 'branch_id'}"/>
                        <filter name="dept" string="Department" context="{'group_by': 'department_id'}"/>
                        <filter name="project" string="Project" context="{'group_by': 'project_id'}"/>
                        <filter name="date" string="Date" context="{'group_by': 'bap_date'}"/>
                        <filter name="vendor" string="Vendor" context="{'group_by': 'partner_id'}"/>
                        <filter name="nomor_po" string="Nomor PO" context="{'group_by': 'po_id'}"/>
                        <filter name="bap_type" string="Jenis BAP" context="{'group_by': 'bap_type'}"/>

                    </group>
                </search>
            </field>
        </record>
        
        <!-- kanban -->
        <record id="wika_berita_acara_pembayaran_view_kanban" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.kanban</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <field name="name"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- calendar -->
        <record id="wika_berita_acara_pembayaran_view_calendar" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.calendar</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <calendar string="Service Request"
                    date_start="start_date"
                    date_stop="end_date"
                    event_open_popup="true"
                    mode="month"
                    quick_add="False">
                <field name="name"/>
            </calendar>
            </field>
        </record>

        <!-- pivot -->
        <record id="wika_berita_acara_pembayaran_view_pivot" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.pivot</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <pivot string="Pivot" disable_linking="true">
                    <field name="partner_id"/>
                    <field name="po_id"/>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id" />
                </pivot>
            </field>
        </record>

        <!-- tree view -->
        <record id="wika_berita_acara_pembayaran_view_tree" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.tree</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <tree string="Berita Acara Pembayaran List">
                    <field name="name"/>
                    <field name="bap_type"/>
                    <field name="branch_id"/>
                    <field name="department_id"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="po_id"/>
                     <field name="bap_type"/>
                    <field name="state"/>
                     <field name="total_pembayaran"/>
                    <field name="is_fully_invoiced" groups="base.group_no_one"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="wika_berita_acara_pembayaran_view_form" model="ir.ui.view">
            <field name="name">wika.berita.acara.pembayaran.view.form</field>
            <field name="model">wika.berita.acara.pembayaran</field>
            <field name="arch" type="xml">
                <form string="Berita Acara Pembayaran Form">
                    <header>
                        <button name="action_print_bap" type="object" string="Print BAP" states="draft" class="oe_highlight"/>
                        <button name="action_approve" type="object" string="APPROVE" states="uploaded" class="btn-success"/>
                        <button name="push_bap" type="object" string="PUSH BAP" states="draft,rejected,approved" class="btn-primary" groups="base.group_no_one"/>

                        <button name="action_submit" type="object" string="SUBMIT" states="draft,rejected" class="btn-primary"/>
                        <button name="action_reject" type="object" string="REJECT" states="uploaded" class="btn-danger"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,uploaded,approved"/>
                    </header>
                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" type="object" name="get_documents" icon="fa-file-text-o">
                                <field string="Documents" name="documents_count" widget="statinfo"/>
                            </button>
                            <button attrs="{'invisible': [('bap_type', '!=', 'cut over')]}" class="oe_stat_button" type="object" name="get_invoice_item" icon="fa-file-text-o">
                                <field string="Invoice Item Cut Over" name="invoice_item_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                               <field name="partner_id" options="{'no_create': True, 'no_create_edit':True}"  attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])]}"/>
                                <field name="po_id" options="{'no_create': True, 'no_create_edit':True}"  domain="[('state', '=', 'approved')]"  attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])]}"/>
                                <field name="bap_type" attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])]}"/>
                                <field name="signatory_name"  readonly="1" force_save="1"/>
                                <field name="position" readonly="1" force_save="1"/>
                                <field name="vendor_signatory_name"  readonly="1" force_save="1"/>
                                <field name="vendor_position"  readonly="1" force_save="1"/>
                                <field name="address"  readonly="1" force_save="1"/>
                                <field name="job"  readonly="1" force_save="1"/>
                                <field name="step_approve" invisible="1"/>
                                 <field name="is_fully_invoiced" groups="base.group_no_one"/>
                                <field name="is_cut_over"  groups="base.group_no_one"/>

                            </group>
                            <group>
                                <field name="check_biro" invisible="1"/>
                                <field name="level" invisible="1"/>

                                <field name="branch_id" domain="[('biro', '=', False)]"
                                    attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])]}" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="department_id" domain="[('biro', '=', True), ('parent_id', '=', branch_id)]"
                                    attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])], 'invisible': [('check_biro', '=', False)]}"/>
                                <field name="project_id" attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])]}" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="end_date" attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])]}" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="bap_date" attrs="{'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <field name="pph_ids" options="{'no_create': True, 'no_create_edit':True}" domain="[('tax_group_id', '!=', 'PPN')]" widget="many2many_tags" style="background-color: #dddded;"/>
                                <field name="guarantee_type" attrs="{'invisible': [('bap_type', '!=', 'uang muka')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <field name="guarantee_value" attrs="{'invisible': [('bap_type', '!=', 'uang muka')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <field name="guarantee_numb" attrs="{'invisible': [('bap_type', '!=', 'uang muka')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <field name="guarantee_period" attrs="{'invisible': [('bap_type', '!=', 'uang muka')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <!-- <label for="guarantee_period" string="Jangka waktu jaminan" attrs="{'invisible': [('bap_type', '!=', 'uang muka')], 'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <div name="dates" class="o_row">
                                    <field name="guarantee_period" widget="daterange" options='{"related_end_date": "date"}'/>
                                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                    <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('guarantee_period', '=', False), ('date', '=', False)]}"/>
                                    <field name="date" widget="daterange" options='{"related_start_date": "guarantee_period"}'/>
                                </div> -->
                                <field name="numb_ba_pho" attrs="{'invisible': [('bap_type', '!=', 'retensi')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <field name="pho_date" attrs="{'invisible': [('bap_type', '!=', 'retensi')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <field name="numb_ba_fho" attrs="{'invisible': [('bap_type', '!=', 'retensi')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>
                                <field name="fho_date" attrs="{'invisible': [('bap_type', '!=', 'retensi')],
                                    'readonly': [('state', 'in', ['uploaded', 'approved'])]}" style="background-color: #dddded;"/>

                                <field name="last_value" groups="base.group_no_one"/>
                                <field name="last_quantity" groups="base.group_no_one"/>
                                <field name="last_dp_total" groups="base.group_no_one"/>
                                <field name="last_retensi_total" groups="base.group_no_one"/>
                                <field name="last_qty_dp" groups="base.group_no_one"/>
                                <field name="last_qty_retensi" groups="base.group_no_one"/>
                                 <!-- nilai prestasi -->
                                <field name="qty_sd_saatini" groups="base.group_no_one"/>
                                <field name="price_sd_saatini" groups="base.group_no_one"/>
                                <field name="total_sd_saatini" groups="base.group_no_one" />

                                <!-- potongan uang muka -->
                                <field name="qty_dp_saat_ini" groups="base.group_no_one"/>
                                <field name="total_dp_saatini" groups="base.group_no_one"/>
                                <field name="dp_sd_saatini" groups="base.group_no_one"/>

                                <!-- potongan retensi -->
                                <field name="qty_retensi_saat_ini" groups="base.group_no_one"/>
                                <field name="total_retensi_saatini" groups="base.group_no_one"/>
                                <field name="retensi_sd_saatini" groups="base.group_no_one"/>
                                <field name="amount_pecentage_tmp" groups="base.group_no_one"/>
                                <field name="amount_pecentage_retensi" groups="base.group_no_one"/>
                                <field name="terbilang" groups="base.group_no_one"/>
                                <field name="total_pembayaran_um" groups="base.group_no_one"/>
                                <field name="terbilang_um" groups="base.group_no_one"/>
                                <field name="total_pembayaran_retensi" groups="base.group_no_one"/>
                                <field name="terbilang_retensi" groups="base.group_no_one"/>
                                <field name="total_pembayaran_co" groups="base.group_no_one"/>
                                <field name="terbilang_co" groups="base.group_no_one"/>
                                <!-- Constrains  Adjustment-->
                                 <field name="value_to_date" groups="base.group_no_one"/>
                                <field name="total_adjustment" groups="base.group_no_one"/>
                                <field name="total_po" groups="base.group_no_one"/>
                                <field name="remain_val_po" groups="base.group_no_one"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="List BAP">
                                <group>
                                    <field name="bap_ids" mode="tree,kanban" nolabel="1" colspan="2" force_save="1"
                                        attrs="{'invisible': [('bap_type', 'not in', ['progress', 'cut over'])],'readonly': [('state', 'in', ['approved', 'uploaded'])]}">
                                        <tree string="List BAP" editable="top" create="0">
                                           <field name="invoice_line_id" groups="base.group_no_one"/>
                                            <field name="picking_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('po_id', '=', parent.po_id)]"/>
                                            <field name="stock_move_id" options="{'no_create': True, 'no_create_edit':True}" domain="[('picking_id', '=', picking_id)]" string="Item GR/SES"/>
                                            <field name="purchase_line_id" invisible="1"/>
                                            <field name="unit_price_po" invisible="1"/>
                                            <field name="sisa_qty_bap_grses" invisible="1"/>
                                            <field name="qty_invoiced" invisible="1"/>
                                            <field name="product_id" readonly="1" force_save="1"/>
                                            <field name="product_uom" readonly="1" force_save="1"/>
                                            <field name="qty"/>
                                            <field name="tax_ids" widget="many2many_tags" string=""/>
                                            <field name="currency_id" readonly="1" force_save="1"/>
                                            <field name="unit_price" readonly="1" force_save="1"/>

                                            <field name="sub_total" sum="Total"/>
                                            <field name="adjustment" />
                                            <field name="amount_adjustment" sum="Total" attrs="{'invisible': [('adjustment', '!=', True)]}"/>
                                        </tree>
                                    </field>
                                    <field name="price_cut_ids"
                                        attrs="{'invisible': ['|', ('bap_type', '=', 'progress'), ('bap_type', '=', 'cut over')]}"
                                        mode="tree,kanban" nolabel="1" colspan="2">
                                        <tree editable="top">
                                            <field name="po_id" invisible="1"/>
                                            <field name="product_id"/>
                                            <field name="amount"/>
                                        </tree>
                                    </field>
                                    <group>
                                        <field colspan="2" name="notes" nolabel="1" placeholder="Define your terms and conditions ..."/>

                                    </group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="retensi_total" groups="base.group_no_one"/>
                                        <field name="dp_total" groups="base.group_no_one"/>
                                        <field name="dp_qty_total" groups="base.group_no_one"/>
                                        <field name="retensi_qty_total" groups="base.group_no_one"/>
                                        <field name="total_amount"/>
                                        <field name="total_tax" string="Total PPN"/>
                                        <field name="amount_pph"  />
                                        <field name="total_pph"/>
                                        <field name="total_pembayaran"/>

                                        <field name="grand_total" invisible="1"/>
                                        <field name="total_current_value" groups="base.group_no_one"/>
                                        <field name="total_qty_gr" invisible="1"/>
                                        <field name="total_unit_price_po" invisible="1"/>
                                    </group>
                                </group>
                                <div class="clearfix"/>
                            </page>
                            <page string="Potongan Lain-lain" attrs="{'invisible': [('bap_type', '=', 'uang muka')]}">
                                <field name="price_cut_ids">
                                    <tree editable="top">
                                        <field name="po_id" invisible="1"/>
                                        <field name="product_id" options="{'no_create': True, 'no_create_edit':True}"  domain="[('name', 'in', ('RETENSI','DP','DENDA'))]"/>
                                        <field name="qty"/>
                                        <field name="amount"/>
                                        <field name="percentage_amount" string="%"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="retensi_total" groups="base.group_no_one"/>
                                    <field name="dp_total" groups="base.group_no_one"/>
                                    <field name="dp_qty_total" groups="base.group_no_one"/>
                                    <field name="retensi_qty_total" groups="base.group_no_one"/>
                                </group>
                            </page>
                            <page string="List Document">
                                <group>
                                    <field name="document_ids" mode="tree,kanban" nolabel="1" colspan="2">
                                        <tree string="List Document" delete="0" create="0">
                                            <field name="document_id"/>
<!--
                                            <button name="buttonClickEvent" string="Upload Disini" type="object" attrs="{'invisible': [('state', '=', 'uploaded')]}"  class="fa fa-hand-o-right"/>
-->
                                            <field name="document" widget="binary_button" filename="filename"/>
                                            <field name="filename" invisible="1"/>
                                            <field name="state"/>
                                        </tree>
                                        <form string="List Document">
                                            <group>
                                                <field name="document" attrs="{'readonly': [('state', '=', 'verified')]}" widget="pdf_viewer" filename="filename"/>
                                                <field name="filename" invisible="1"/>
                                                <field name="state" invisible="1"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                            <page string="List Approval">
                                <group>
                                    <field name="history_approval_ids" mode="tree,kanban" nolabel="1"  colspan="2" 
                                        attrs="{'readonly': [('state', 'in', ['upload', 'approve'])]}" readonly="1">
                                        <tree string="List Approval">
                                            <field name="user_id"/>
                                            <field name="groups_id"/>
                                            <field name="date"/>
                                            <field name="note"/>
                                        </tree>
                                        <form string='List Approval'>
                                            <group>
                                                <field name="user_id"/>
                                                <field name="groups_id"/>
                                                <field name="date"/>
                                                <field name="note"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- action -->
        <record id="wika_berita_acara_pembayaran.action_window" model="ir.actions.act_window">
            <field name="name">BAP</field>
            <field name="res_model">wika.berita.acara.pembayaran</field>
            <field name="view_mode">tree,form,kanban,calendar,pivot</field>
        </record>

    </data>
</odoo>
