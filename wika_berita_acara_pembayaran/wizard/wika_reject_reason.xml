<odoo>
    <data>
        <record id="bap_reject_wizard_form" model="ir.ui.view">
            <field name="name">reject.wizard.form</field>
            <field name="model">reject.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="is_reject_doc"/>
                        <field name="reject_reason"/>
                        <field name="related_document_ids" widget="many2many_tags" attrs="{'invisible': [('is_reject_doc', '=', False)]}" />
                    </group>
                    <footer>
                        <button name="ok" type="object" string="Simpan" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_reject_wizard" model="ir.actions.act_window">
            <field name="name">Reject Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reject.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>