<odoo>
    <record id="documents_facet_wika_bap" model="documents.facet">
        <field name="name">Documents</field>
    </record>

    <record id="documents_tag_bap" model="documents.tag">
        <field name="name">BAP</field>
        <field name="facet_id" ref="wika_berita_acara_pembayaran.documents_facet_wika_bap"/>
    </record>

    <!-- Update documents_facet_kontrak with tag_ids -->
    <record id="documents_facet_wika_bap" model="documents.facet">
        <field name="tag_ids" eval="[(6, 0, [ref('wika_berita_acara_pembayaran.documents_tag_bap')])]"/>
    </record>

    <record id="documents_folder_wika_berita_acara_pembayaran" model="documents.folder">
        <field name="name">BAP</field>
        <field name="facet_ids" eval="[(4, ref('wika_berita_acara_pembayaran.documents_facet_wika_bap'))]"/>
        <field name="group_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        <field name="read_group_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
    </record>
</odoo>
